.tui-masking {
    height: 100%;
    width: 100%;
    position: fixed;
    background: #000;
    opacity: 0.3;
    z-index: 999;
    left: 0;
    top: 0;
}

.tui-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    background: #fff;
    transform: translate(-50%, -50%);
    z-index: 1000;
    min-height: 260px;
    border-radius: 2px;
    box-shadow: 0 1px 12px 0 rgba(0, 0, 0, 0.15);
    border: 10px solid #cfcfcf;
    overflow: hidden;
}

.tui-modal-title {
    background-color: #fe6a00;
    color: #fff;
    height: 48px;
    line-height: 48px;
    font-size: 1.6rem;
    text-indent: 2em;
    position: relative;
    background-image: url(../images/loginmodal-title.png);
    background-repeat:  no-repeat;
    width: 100%;
    background-position: 20px;
}

.tui-modal-title i {
    position: absolute;
    right: 15px;
    top: 10px;
    cursor: pointer;
    color: #e5c0a6;
    font-size: 32px;
    display: inline;
    transition: all ease 0.2;
}
.tui-modal-body {
    padding: 20px;
    box-sizing: border-box;
    text-align: left;
    overflow: hidden;
}

.tui-modal-handle {
    height: 45px;
    text-align: center;
    vertical-align: middle;
}

.tui-modal-handle button {
    margin: 0 10px;
}
.tui-login-cantainer{
	display: inline-block;
}
.tui-login-cantainer a{
	float: right;
	color: #0645b7;
	margin-top: 5px;
}
.tui-login-input{
	width: 320px !important;
	height: 35px !important;
}


